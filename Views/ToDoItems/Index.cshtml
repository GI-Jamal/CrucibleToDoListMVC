@model IEnumerable<CrucibleToDoListMVC.Models.ToDoItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex flex-row gap-2">
    <form asp-action="Create" asp-controller="ToDoItems" method="get">
        <button class="btn btn-primary">Create</button>
    </form>
    <form asp-action="Index" asp-controller="ToDoItems" method="post">
        <button name="showCompletedTasks" value="true" class="btn btn-primary">Completed Tasks</button>
    </form>
    <form asp-action="Index" asp-controller="ToDoItems" method="post">
        <button name="showCompletedTasks" value="false" class="btn btn-primary">Tasks In Progress</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Accessories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsCompleted)
        </td>
        <td>
            @foreach(Accessory accessory in item.Accessories)
            {
                @accessory.Name<span>; </span>
            }
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
